<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="DemoApp.Views.LoginPage">
	<ContentPage.Content>
        <Grid>
        <Grid.RowDefinitions>
                <RowDefinition Height=".2*" />
                  <RowDefinition Height="*" />
                  <RowDefinition Height=".2*" />
               </Grid.RowDefinitions>
               <Grid.ColumnDefinitions>
                  <ColumnDefinition Width=".1*" />
                  <ColumnDefinition Width="*" />
                 <ColumnDefinition Width=".1*" />
               </Grid.ColumnDefinitions>
            <StackLayout Orientation="Vertical" Grid.Row="1" Grid.Column="1" Spacing="10">
                <Entry Placeholder="User Id" />
                <Entry Placeholder="Password" IsPassword="true" />
                <Button Text="Login" HorizontalOptions="CenterAndExpand" Command="{Binding LoginComman}"/>
            </StackLayout>
        </Grid>
	</ContentPage.Content>
</ContentPage>
